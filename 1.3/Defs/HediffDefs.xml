			<ThingDef>VaccuumHand</ThingDef>
			<HediffDef>VaccuumHand</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing vaccuum hand.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>VaccuumHand</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>VaccuumHand</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Hand</li>
		</appliedOnFixedBodyParts>
		<addsHediff>VaccuumHand</addsHediff>
	</RecipeDef>

