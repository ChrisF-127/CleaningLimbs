	<HediffDef ParentName="AddedBodyPartBase">
		<defName>VaccuumHand</defName>
		<label>vaccuum hand</label>
		<labelNoun>a vaccuum hand</labelNoun>
		<description>An installed vaccuum hand.</description>
		<descriptionHyperlinks>
			<ThingDef>VaccuumHand</ThingDef>
		</descriptionHyperlinks>
		<addedPartProps>
			<solid>true</solid>
